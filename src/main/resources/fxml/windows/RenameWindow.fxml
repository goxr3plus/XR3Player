<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root alignment="CENTER" prefHeight="36.0" prefWidth="406.0" spacing="5.0"
         style="-fx-background-color: #151515; -fx-background-radius: 0;" stylesheets="@../../style/application.css"
         type="VBox" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
    </padding>
    <HBox alignment="CENTER" spacing="5.0">
        <Label fx:id="titleLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="27.0"
               prefWidth="220.0"
               style="-fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-border-color: transparent transparent white transparent;"
               text="Rename Window" HBox.hgrow="ALWAYS"/>
        <Label fx:id="charsField" alignment="CENTER" maxHeight="1.7976931348623157E308" prefHeight="19.0"
               prefWidth="58.0"
               style="-fx-font-weight: bold; -fx-font-size: 13; -fx-text-fill: white; -fx-background-color: firebrick; -fx-background-radius: 0;"
               text="150" HBox.hgrow="ALWAYS">
            <tooltip>
                <Tooltip text="Characters on TextField"/>
            </tooltip>
        </Label>
        <JFXButton fx:id="okButton" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" styleClass="jfx-button4"
                   text="OK" HBox.hgrow="ALWAYS">
            <tooltip>
                <Tooltip text="Okay"/>
            </tooltip>
            <graphic>
                <FontIcon iconColor="#64ff41" iconLiteral="fas-check" iconSize="24"/>
            </graphic>
        </JFXButton>
        <JFXButton fx:id="closeButton" buttonType="RAISED" contentDisplay="GRAPHIC_ONLY" focusTraversable="false"
                   layoutX="283.0" layoutY="10.0" styleClass="jfx-button-dark-white-selection" text=" ">
            <tooltip>
                <Tooltip text="Cancel"/>
            </tooltip>
            <graphic>
                <FontIcon iconColor="#f83e3e" iconLiteral="fas-times" iconSize="24"/>
            </graphic>
        </JFXButton>
    </HBox>
</fx:root>
